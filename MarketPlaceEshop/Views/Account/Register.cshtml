                        <div class=" shadow-none">

                            <div class="bs-stepper-content pt-4">
                                <form  asp-controller="Account" asp-action="Register">
                                    <!-- Account Details -->
                                    <div id="accountDetailsValidation" class="content">
                                        <div class="content-header mb-3">
                                            <h4 class="secondary-font">ثبت نام مشتری</h4>
                                            <span>اطلاعات حساب خود را وارد کنید</span>
                                        </div>
                                        <div class="row g-3">
                                            <div class="col-sm-6">
                                                <label class="form-label">نام </label>
                                                <input type="text" asp-for="@Model.FirstName" class="form-control text-start" placeholder="johndoe" dir="ltr">
                                                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="form-label"> نام خانوادگی </label>
                                                <input type="text" asp-for="@Model.LastName" class="form-control text-start" placeholder="johndoe" dir="ltr">
                                                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                                            </div>

                                            <div class="col-sm-6">
                                                <label class="form-label">ایمیل</label>
                                                <input asp-for="@Model.Email" class="form-control text-start" autocomplete="off" placeholder="john.doe@email.com" aria-label="john.doe@email.com" dir="ltr">
                                                <span asp-validation-for="@Model.Email" class="text-danger"></span>

                                            </div>


                                            <div class="col-sm-6">
                                                <label class="form-label">کد ملی </label>
                                                <input type="text" asp-for="@Model.NationalCode" class="form-control text-start" placeholder="0123456789" dir="ltr">
                                                <span asp-validation-for="@Model.NationalCode" class="text-danger"></span>
                                            </div>

                                            <div class="col-sm-6">
                                                <label class="form-label">موبایل </label>
                                                <input type="text" asp-for="@Model.MobileNumber" class="form-control text-start" placeholder="09120000000" dir="ltr">
                                                <span asp-validation-for="@Model.MobileNumber" class="text-danger"></span>
                                            </div>
                                            <div class="col-sm-6">
                                                <label class="form-label">تلفن </label>
                                                <input type="text" asp-for="@Model.PhoneNumber" class="form-control text-start" placeholder="02188888888" dir="ltr">
                                                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                                            </div>

                                         


                                            <div class="col-md-6 col-12 mb-4">
                                                <label for="flatpickr-date" class="form-label">تولد</label>
                                                <input class="form-control flatpickr-input"  asp-for="@Model.DateOfBirth" placeholder="YYYY/MM/DD" id="flatpickr-date">
                                                <span asp-validation-for="@Model.DateOfBirth" class="text-danger"></span>
                                            </div>

                                        
                                            <div class="col-sm-6 form-password-toggle">
                                                <label class="form-label">رمز عبور</label>
                                                <div class="input-group input-group-merge">
                                                    <input type="password" asp-for="@Model.Password" class="form-control text-start" placeholder="············" aria-describedby="multiStepsPass2" dir="ltr">
                                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                                </div>
                                                <span asp-validation-for="@Model.Password" class="text-danger"></span>

                                            </div>
                                            <div class="col-sm-6 form-password-toggle">
                                                <label class="form-label">تایید رمز عبور</label>
                                                <div class="input-group input-group-merge">
                                                    <input type="password" asp-for="@Model.ConfirmPassword" class="form-control text-start" placeholder="············" aria-describedby="multiStepsConfirmPass2" dir="ltr">
                                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                                </div>
                                                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>

                                            </div>



                                        </div>
                                    </div>
                                    <!-- Personal Info -->
                                    <!-- Billing Links -->
                                    <div class="col-12 d-flex justify-content-between mt-4">

                                        <button type="submit" class="btn btn-success btn-next btn-submit">ثبت</button>
                                    </div>
                                </form>
                            </div>
