    @* بررسی و درست کردن پایینی که وضعیت صفحه رو بگیره
    *@
    @await RenderSectionAsync("Scripts", required: false)



    <script>



        document.addEventListener("DOMContentLoaded", function () {
            const menuLinks = document.querySelectorAll(".menu-link");
            const activeHref = sessionStorage.getItem("activeHref");

            // پاک کردن کلاس‌های open و active از همه عناصر
            const allMenuItems = document.querySelectorAll(".menu-item");
            allMenuItems.forEach((menuItem) => {
                menuItem.classList.remove("open", "active");
            });

            const allMenuSubs = document.querySelectorAll(".menu-sub");
            allMenuSubs.forEach((menuSub) => {
                menuSub.classList.remove("open");
            });

            // تنظیم active و open در بارگذاری صفحه
            if (activeHref) {
                const activeLink = document.querySelector(`.menu-link[href="${activeHref}"]`);
                if (activeLink) {
                    // افزودن کلاس active به menu-link
                    activeLink.classList.add("active");

                    // افزودن کلاس open به نزدیک‌ترین menu-item و menu-sub
                    const menuItem = activeLink.closest(".menu-item");
                    if (menuItem) {
                        menuItem.classList.add("open", "active");

                        // افزودن کلاس open به menu-sub و menu-item والد
                        const parentMenuSub = menuItem.closest(".menu-sub");
                        if (parentMenuSub) {
                            parentMenuSub.classList.add("open");

                            const parentMenuItem = parentMenuSub.closest(".menu-item");
                            if (parentMenuItem) {
                                parentMenuItem.classList.add("open", "active");

                                const grandParentMenuSub = parentMenuItem.closest(".menu-sub");
                                if (grandParentMenuSub) {
                                    grandParentMenuSub.classList.add("open");
                                }
                            }
                        }
                    }
                }
            }

            // ذخیره مقدار href در sessionStorage در زمان کلیک
            menuLinks.forEach((menuLink) => {
                menuLink.addEventListener("click", function (e) {
                    const href = menuLink.getAttribute("href");
                    if (href && href !== "javascript:void(0);") {
                        sessionStorage.setItem("activeHref", href);
                    }
                });
            });
        });

    </script>






